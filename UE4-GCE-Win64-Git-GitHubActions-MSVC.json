{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "ue4-build-system-example",
      "source_image": "windows-server-2019-dc-v20200512",
	  "disk_size": "50",
      "communicator": "winrm",
      "winrm_username": "packer_user",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "metadata": {
        "windows-startup-script-cmd": "winrm quickconfig -quiet & net user /add packer_user & net localgroup administrators packer_user /add & winrm set winrm/config/service/auth @{Basic=\"true\"}"
      },
      "zone": "europe-west1-b"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "ImageCreation",
      "destination": "C:\\"
    },
    {
      "type": "file",
      "source": "Runtime",
      "destination": "C:\\"
    },
    {
      "type": "powershell",
      "inline": "C:\\ImageCreation\\Scripts\\InstallSoftware.ps1"
    },
    {
      "type": "powershell",
      "inline": "C:\\ImageCreation\\Scripts\\GCERegisterServices.ps1"
    },
    {
      "type": "powershell",
      "inline": "Invoke-Pester -Script C:\\ImageCreation\\Scripts\\VerifyInstance.ps1"
    },
    {
      "type": "powershell",
      "inline": "Remove-Item -Force -Recurse C:\\ImageCreation"
    }
  ]
}
